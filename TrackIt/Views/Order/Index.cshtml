@model OrderClass


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Orders</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="myForm">
                    <input hidden id="ID" asp-for="@Model.Id" class="form-control" placeholder="Id" value="0">
                    <div class="form-group">
                        <label asp-for="@Model.Arival"></label>
                        <input id="arival" asp-for="@Model.Arival" class="form-control" placeholder="Name">
                        <span asp-validation-for="@Model.Arival"></span>
                    </div>

                   @*  <div class="form-group">
                        <label asp-for="@Model.Quantity"></label>
                        <input id="qua" asp-for="@Model.Quantity" class="form-control" placeholder="Name">
                        <span asp-validation-for="@Model.Quantity"></span>
                    </div> *@
                    <div class="form-group">
                        <label asp-for="@Model.vendor_id"></label>
                        <select id="V-id" asp-for="@Model.vendor_id" asp-items="@ViewBag.Vendor_id" class="form-control">
                            <option disabled selected>--select Vendor--</option>
                        </select>
                        <span asp-validation-for="@Model.vendor_id"></span>
                    </div>
@*                     <div class="form-group">
                        <label asp-for="@Model.Product_id"></label>
                        <select id="P-id" asp-for="@Model.Product_id" asp-items="@ViewBag.Product_id" class="form-control">
                            <option disabled selected>--Select Product--</option>
                        </select>
                        <span asp-validation-for="@Model.Product_id"></span>
                    </div> *@
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<partial name="_SearchBar" />

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Arival
            </th>
            <th>
                Invoice No
            </th>
            <th>
                Vendor Name
            </th>
            <th colspan="3" class="text-center">
                <a class="btn btn-primary" asp-action="newOrder">
                    <i class="bi bi-file-earmark-plus-fill"></i> Add
                </a>
            </th>
        </tr>
    </thead>
    <tbody id="t-body">

    </tbody>
</table>

